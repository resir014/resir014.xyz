{
  "extends": "./tsconfig.project.json",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "es2017"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["*"]
    },
    "jsx": "preserve",
    "typeRoots": ["./@types", "./node_modules/@types"],
    "incremental": true
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "types.d.ts", "**/*.ts", "**/*.tsx"]
}
