{
  "extends": "./tsconfig.project.json",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "es2017"],
    "baseUrl": ".",
    "paths": {
      "~/_data/*": ["_data/*"],
      "~/assets/*": ["assets/*"],
      "~/components/*": ["components/*"],
      "~/fonts/*": ["fonts/*"],
      "~/lib/*": ["lib/*"],
      "~/modules/*": ["modules/*"],
      "~/pages/*": ["pages/*"],
      "~/styles/*": ["styles/*"],
      "~/types/*": ["types/*"]
    },
    "jsx": "preserve",
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "types.d.ts", "**/*.ts", "**/*.tsx"]
}
